========================================================================
Null coalescing operator ?? — Basic
========================================================================
fun main() {
    val a: int?;
    val b: int;
    val c = a ?? b;
    //! ^ int
}
------------------------------------------------------------------------
ok

========================================================================
Null coalescing operator ?? — Left is Null
========================================================================
fun main() {
    val a: null;
    val b: int;
    val c = a ?? b;
    //! ^ int
}
------------------------------------------------------------------------
ok

