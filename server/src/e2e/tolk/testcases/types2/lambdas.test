========================================================================
Lambda nullable auto return type
========================================================================
fun measure<T>(cb: (int) -> T): T {}

fun foo() {
    val a = measure(fun (a) {
//!     ^ int?
        if (a > 10) {
            return null
        }
        return 10
    })
}
------------------------------------------------------------------------
ok

========================================================================
Lambda with never auto return type
========================================================================
fun measure<T>(cb: (int) -> T): T {}

fun foo() {
    val a = measure(fun (a) {
//!     ^ never
        if (a > 10) {
            throw 20
        }
        throw 10
    })
}
