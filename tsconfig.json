{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "lib": ["es2020"],
        "sourceMap": true,
        "strict": true,
        "allowUnreachableCode": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noPropertyAccessFromIndexSignature": true,
        // "noUnusedParameters": true,
        "baseUrl": ".",
        "paths": {
            "@server/*": ["server/src/*"],
            "@shared/*": ["shared/src/*"]
        }
    },
    "include": ["server/src/**/*", "editors/code/src/**/*"],
    "exclude": ["node_modules", ".vscode-test", "editors/code/src/webview-ui/**"],
    "references": [{"path": "./editors"}, {"path": "./server"}]
}
